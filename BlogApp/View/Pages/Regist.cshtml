@page
@model BlogApp.View.Pages.RegistModel
@{
    ViewData["Title"] = "Registration";
}
<div>
    <h2>Регистрация в приложении<b-badge></b-badge></h2>
</div>
<template>
    <template>
        <div>
            <b-form-group id="fieldset-1"
                          label="Имя"
                          label-for="input-1"
                          valid-feedback="Thank you!"
                          :invalid-feedback="invalidFeedback"
                          :state="state">
                <b-form-input id="input-1" v-model="name" :state="state" trim></b-form-input>
            </b-form-group>
        </div>
    </template>
    <div>
        <b-form-group id="fieldset-1"
                      label="Фамилия"
                      label-for="input-1"
                      valid-feedback="Thank you!"
                      :invalid-feedback="invalidFeedback"
                      :state="state">
            <b-form-input id="input-1" v-model="name" :state="state" trim></b-form-input>
        </b-form-group>
    </div>
</template>
<template>
    <div>
        <b-form-group id="fieldset-1"
                      label="Email"
                      label-for="input-1"
                      valid-feedback="Thank you!"
                      :invalid-feedback="invalidFeedback"
                      :state="state">
            <b-form-input id="input-1" v-model="name" :state="state" trim></b-form-input>
        </b-form-group>
    </div>
</template>
<template>
    <div>
        <b-form-group id="fieldset-1"
                      label="Пароль"
                      label-for="input-1"
                      valid-feedback="Thank you!"
                      :invalid-feedback="invalidFeedback"
                      :state="state">
            <b-form-input id="input-1" v-model="name" :state="state" trim></b-form-input>
        </b-form-group>
    </div>
</template>
<div>
    <b-button variant="outline-primary">Зарегестрироваться</b-button>
</div>
<script>
    export default {
        computed: {
            state() {
                return this.name.length >= 4
            },
            invalidFeedback() {
                if (this.name.length > 0) {
                    return 'Enter at least 4 characters.'
                }
                return 'Пожалуйста, введи какое-то значение'
            }
        },
        data() {
            return {
                name: ''
            }
        }
    }
</script>
